<div class="card-body">
  <h3 class="card-title">
    Word: <%= @word.name %>
  </h3>
</div>

<div class="card-body">
  <% if @word.definitions.any? %>
    <h4>Definitions of the Word: <%= @word.name %> <h4>
    <ul>
      <% @word.definitions.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4> No definitions found for the word: <%= @word.name%> </h4>
  <% end %>
</div>

<div class="card-body">
    <h4>Add a Definition</h4>
    <form action="/words/<%= @word.id %>/definitions" method="post">
      <div class="form-group">
        <label for="definition_name">Definition:</label>
        <input id="definition_name" name="definition_name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn text-white" style="background-color:#4471db">Add definition</button>
    </form>
</div>

<br/>
<br/>

<div class="card-body">
  <a href="/words/<%= @word.id %>/edit" style="background-color:#f2a218">Edit the word</a>
</div>
<div class="card-body">
  <form action="/words/<%= @word.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit" class="btn btn-danger">Delete Word</button>
  </form>
</div>

<nav class="navbar fixed-bottom navbar-dark bg-dark text-center">
  <button type="button" class="btn btn-success">
    <a href="/words">View All Words!</a>
  </button>
</nav>