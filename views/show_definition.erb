<h2 class="card-title">Definition: <%= @definition.name %></span></h2><br>
<h4 class="card-text">Word: <%= @definition.word.name %></span></h4><br>

<div class="card-body">
  <form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <label for="new_definition">Edit Definition:</label>
      <input id="new_definition" name="new_definition" type="text" class="form-control">
      <br>
      <button type="submit" class="btn" style="background-color:white">Update Definition</button>
  </form>
</div>

<div class="col-sm-6 justify-content-center">
    <form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn btn-danger">Delete Definition</button>
    </form>
  </div>
<br>

<nav class="navbar fixed-bottom navbar-dark bg-dark text-center">
  <button type="button" class="btn btn-success">    
    <a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>
  </button>
  <br />
  <button type="button" class="btn btn-success">
    <a href="/words">View All Words!</a>
  </button>
</nav>
