<div class="row">
<div class="card-body text-white">
  <h3 class="card-title"> 
    <%= @word.name %></span>    
  </h3>
</div>
<div class="card shadow bg-light">
<div class="card-body">
  <form action="/words/<%= @word.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
